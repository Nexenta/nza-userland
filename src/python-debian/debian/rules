#!/usr/bin/make -f
# -*- makefile -*-

VERSION := $(shell dpkg-parsechangelog | grep '^Version: ' | awk '{print $$2}')

%.py: %.py.in
	sed -e 's/__CHANGELOG_VERSION__/$(VERSION)/' < $< > $@

README.debtags: ./lib/debian/doc-debtags
	$< > $@

override_dh_auto_build: setup.py README.debtags
	dh_auto_build

override_dh_auto_clean:
	dh_auto_clean
	rm -f setup.py
	rm -f README.debtags

%:
	dh $@

