<transform file path=usr.*/man/.+                -> default mangler.man.stability volatile>

set name=pkg.fmri \
    value=pkg:/developer/illumos-deb@1,$(BUILD_VERSION)
set name=pkg.summary value="ips2deb converter for illumos gate"
set name=org.opensolaris.consolidation value=$(CONSOLIDATION)
set name=variant.opensolaris.zone value=global

depend fmri=pkg:/consolidation/developer/illumos-incorporation type=require

dir path=usr
dir path=usr/src
dir path=usr/src/illumos-deb

file src/MFT.pm path=usr/src/illumos-deb/MFT.pm
file src/Makefile path=usr/src/illumos-deb/Makefile
file src/Makefile.conf.example path=usr/src/illumos-deb/Makefile.conf.example
file src/README.txt path=usr/src/illumos-deb/README.txt
file src/bldpkg.sh path=usr/src/illumos-deb/bldpkg.sh mode=0755
file src/ips2deb.pl path=usr/src/illumos-deb/ips2deb.pl mode=0755
file src/ips2deb.replaces path=usr/src/illumos-deb/ips2deb.replaces
