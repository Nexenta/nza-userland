#!/usr/bin/make -f

package = gettext

CC = gcc
SHELL = /bin/bash

CFLAGS = -g -Wall -D_REENTRANT
INSTALL_PROGRAM = install
INSTALL_SCRIPT = install

STRIP = true
ATRIP = true

ifeq (,$(findstring noopt,$(DEB_BUILD_OPTIONS)))
 CFLAGS += -O2
endif
ifeq (,$(findstring nostrip,$(DEB_BUILD_OPTIONS)))
 INSTALL_PROGRAM += -s
 STRIP=strip --strip-unneeded --remove-section=.comment --remove-section=.note
 ATRIP=strip --strip-debug
endif

DEB_HOST_ARCH := $(shell dpkg-architecture -qDEB_HOST_ARCH)

# PNET_ARCHS = %alpha%amd64%hppa%i386%ia64%mips%mipsel%powerpc%s390%sparc%
# ifneq (,$(findstring %$(DEB_HOST_ARCH)%,$(PNET_ARCHS)))
#   CSHARP = --enable-csharp=pnet
# endif

# MONO_ARCHS = %amd64%arm%i386%ia64%lpia%powerpc%
# ifneq (,$(findstring %$(DEB_HOST_ARCH)%,$(MONO_ARCHS)))
#   CSHARP = --enable-csharp=mono
# endif

NOJAVA_ARCHS = %none%

build:
	cd debian && $(CC) glibc-test.c debian/a.out
	./configure --prefix=/usr/gnu \
	    --disable-java \
	    --disable-libasprintf \
	    --without-emacs \
	    --disable-openmp \
	    --disable-static \
	    --disable-shared \
	    CC="$(CC)" \
	    CFLAGS="$(CFLAGS)" \
	    CPPFLAGS=-I/usr/include/libxml2
	$(MAKE)
	$(MAKE) install DESTDIR=`pwd`/debian/tmp/ \
		INSTALL_PROGRAM="$(INSTALL_PROGRAM)" \
		INSTALL_SCRIPT="$(INSTALL_SCRIPT)"
	touch build

clean:
	rm -f build
	#[ ! -f Makefile ] || $(MAKE) distclean
	rm -f `find . -name "*~"`
	rm -rf debian/tmp debian/files* core debian/substvars debian/a.out
	cd debian && rm -rf gettext-base gettext gettext-el gettext-doc \
			autopoint

binary-arch: build
	debian/rules gettext-base
	debian/rules gettext

binary-indep: build
	date
	debian/rules gettext-el
	debian/rules gettext-doc
	debian/rules autopoint

gettext-base: build
	rm -rf debian/$@
	install -d debian/$@/DEBIAN debian/$@/usr/gnu/share/doc/$@
	cd debian/$@ && install -d usr/gnu/share/man/man1 usr/gnu/bin usr/gnu/lib \
		usr/gnu/share/lintian/overrides
	cp -p debian/$@.lintian-overrides \
		debian/$@/usr/gnu/share/lintian/overrides/$@
	cp -p debian/tmp/usr/gnu/share/man/man1/gettext.1 \
		debian/$@/usr/gnu/share/man/man1
	cp -p debian/tmp/usr/gnu/share/man/man1/ngettext.1 \
		debian/$@/usr/gnu/share/man/man1
	cp -p debian/tmp/usr/gnu/share/man/man1/envsubst.1 \
		debian/$@/usr/gnu/share/man/man1
	cp -a debian/tmp/usr/gnu/share/man/man3 debian/$@/usr/gnu/share/man
	cd debian/$@/usr/gnu/share/man/ && \
		rm -f dcgettext.3 dcngettext.3 dgettext.3 dngettext.3
	cp -p debian/tmp/usr/gnu/bin/gettext debian/$@/usr/gnu/bin/
	cp -p debian/tmp/usr/gnu/bin/ngettext debian/$@/usr/gnu/bin
	cp -p debian/tmp/usr/gnu/bin/envsubst debian/$@/usr/gnu/bin
	cp -p debian/tmp/usr/gnu/bin/gettext.sh debian/$@/usr/gnu/bin
	cp -a debian/tmp/usr/gnu/share/locale debian/$@/usr/gnu/share
	if [ -f debian/tmp/usr/gnu/lib/GNU.Gettext.dll ]; then \
		cp -p debian/tmp/usr/gnu/lib/GNU.Gettext.dll debian/$@/usr/gnu/lib; \
	fi
###	cp -a debian/tmp/usr/gnu/lib/libasprintf.so.0* debian/$@/usr/gnu/lib
###	cd debian/$@/usr/gnu/lib && chmod 644 libasprintf.so.*
###	$(STRIP) debian/$@/usr/gnu/lib/libasprintf.so.*
	find debian/$@/usr/gnu/share/locale | grep gettext-tools | xargs rm
#ifeq (,$(findstring %$(DEB_HOST_ARCH)%,$(NOJAVA_ARCHS)))
#	install -d debian/$@/usr/gnu/share/java
#	cp -p debian/tmp/usr/gnu/share/gettext/libintl.jar \
#		debian/$@/usr/gnu/share/java
#endif
	cp -p gettext-tools/ABOUT-NLS debian/$@/usr/gnu/share/doc/$@
	cp -p debian/copyright debian/$@/usr/gnu/share/doc/$@
	install -m 755 debian/$@.postinst debian/$@/DEBIAN/postinst
	cp -p ChangeLog debian/$@/usr/gnu/share/doc/$@/changelog
	cp -p debian/changelog debian/$@/usr/gnu/share/doc/$@/changelog.Debian
	cd debian/$@/usr/gnu/share/doc/$@ && gzip -9 changelog changelog.Debian
	gzip -r9 debian/$@/usr/gnu/share/man
	#ln -s gettext.3.gz debian/$@/usr/gnu/share/man/man3/dcgettext.3.gz
	#ln -s gettext.3.gz debian/$@/usr/gnu/share/man/man3/dgettext.3.gz
	#ln -s ngettext.3.gz debian/$@/usr/gnu/share/man/man3/dcngettext.3.gz
	#ln -s ngettext.3.gz debian/$@/usr/gnu/share/man/man3/dngettext.3.gz
	dpkg-gencontrol -p$@ -Pdebian/$@
	cd debian/$@ && \
		md5sum `find * -type f ! -regex "DEBIAN/.*"` > DEBIAN/md5sums
	find debian/$@/usr/gnu/share/locale -type d -empty | xargs -r rmdir
	find debian/$@/usr/gnu/share/locale -type d -empty | xargs -r rmdir
	chown -R 0:0 debian/$@
	chmod -R u+w,go=rX debian/$@
	dpkg --build debian/$@ ..

gettext: build
	rm -rf debian/$@
	install -d debian/$@/DEBIAN debian/$@/usr/gnu/share/doc/$@
	cd debian/$@/ && install -d usr/gnu/share/man \
		usr/gnu/share/lintian/overrides
	cd debian && install -m 755 postinst $@/DEBIAN
	cp -p debian/$@.lintian-overrides \
		debian/$@/usr/gnu/share/lintian/overrides/$@
	cp -p gettext-runtime/BUGS gettext-tools/misc/DISCLAIM NEWS README \
		debian/copyright debian/$@/usr/gnu/share/doc/$@
	cp -p debian/README.Debian debian/$@/usr/gnu/share/doc/$@
	cp -p ChangeLog debian/$@/usr/gnu/share/doc/$@/changelog
	cp -p debian/changelog debian/$@/usr/gnu/share/doc/$@/changelog.Debian
	cd debian/$@/usr/gnu/share/doc/$@ && ln -s ../../$(package)/ABOUT-NLS
	cd debian/$@/usr/gnu/share/doc/$@ && gzip -9 changelog changelog.Debian
	cp -a debian/tmp/usr/gnu/bin debian/$@/usr/gnu/
	cp -a debian/tmp/usr/gnu/lib debian/$@/usr/gnu/
	cp -a debian/tmp/usr/gnu/include debian/$@/usr/gnu/
	cp -a debian/tmp/usr/gnu/share/info debian/$@/usr/gnu/share
	cp -a debian/tmp/usr/gnu/share/aclocal debian/$@/usr/gnu/share
	cp -a debian/tmp/usr/gnu/share/gettext debian/$@/usr/gnu/share
#	rm -f debian/$@/usr/share/gettext/libintl.jar
#ifeq (,$(findstring %$(DEB_HOST_ARCH)%,$(NOJAVA_ARCHS)))
#	mv debian/$@/usr/gnu/share/gettext/gettext.jar debian/$@/usr/gnu/share/java
#endif
	rm -f debian/$@/usr/gnu/lib/GNU.Gettext.dll
	cp -a debian/tmp/usr/gnu/share/man/man1 debian/$@/usr/gnu/share/man
	cp -a debian/tmp/usr/gnu/share/locale debian/$@/usr/gnu/share
	find debian/$@/usr/gnu/share/locale | grep gettext-runtime | xargs rm

###	cd debian/$@/usr/gnu/bin && rm -f gettext ngettext envsubst gettext.sh
	cd debian/$@/usr/gnu/bin && rm -f gettext envsubst

###	cd debian/$@/usr/gnu/lib && rm -f libasprintf.so.* libgettextpo.a *.la
	cd debian/$@/usr/gnu/share/man/man1 && \
		rm -f gettext.1 ngettext.1 envsubst.1
###	cd debian/$@/usr/gnu/lib && chmod 644 libgettextlib* libgettextsrc* \
###		libgettextpo*

#	$(STRIP) debian/$@/usr/lib/preloadable_libintl.so
###	$(STRIP) debian/$@/usr/gnu/lib/libgettextlib*.so
###	$(STRIP) debian/$@/usr/gnu/lib/libgettextsrc*.so
###	$(STRIP) debian/$@/usr/gnu/lib/libgettextpo.so.*
###	$(ATRIP) debian/$@/usr/gnu/lib/libasprintf.a
###	$(ATRIP) debian/$@/usr/gnu/lib/libgettextpo.a
	rm -f debian/$@/usr/gnu/bin/autopoint
###	rm -f debian/$@/usr/gnu/lib/charset.alias
	rm -rf debian/$@/usr/gnu/lib

	rm -f debian/$@/usr/gnu/share/locale/locale.alias
	rm -f debian/$@/usr/gnu/share/man/man1/autopoint.1
	rm -f debian/$@/usr/gnu/share/gettext/archive.git.tar.gz
	gzip -9 debian/$@/usr/gnu/share/info/*
	gzip -r9 debian/$@/usr/gnu/share/man
	dpkg-gencontrol -p$@ -Pdebian/$@
	cd debian/$@ && \
		md5sum `find * -type f ! -regex "DEBIAN/.*"` > DEBIAN/md5sums
	find debian/$@/usr/gnu/share/locale -type d -empty | xargs -r rmdir
	find debian/$@/usr/gnu/share/locale -type d -empty | xargs -r rmdir
	chown -R 0:0 debian/$@
	chmod -R u+w,go=rX debian/$@
	dpkg --build debian/$@ ..

gettext-el: build
	rm -rf debian/$@
	install -d debian/$@/DEBIAN debian/$@/usr/gnu/share/doc/$@
	cd debian/$@  && install -d \
		etc/emacs/site-start.d \
		usr/gnu/share/emacs/site-lisp/$(package) \
		usr/gnu/lib/emacsen-common/packages/install \
		usr/gnu/lib/emacsen-common/packages/remove
	install -m 644 gettext-tools/misc/po-mode.el \
		debian/$@/usr/gnu/share/emacs/site-lisp/$(package)
	install -m 644 gettext-tools/misc/po-compat.el \
		debian/$@/usr/gnu/share/emacs/site-lisp/$(package)
	cd debian && install -m 755 install \
		$@/usr/gnu/lib/emacsen-common/packages/install/$@
	cd debian && install -m 755 remove \
		$@/usr/gnu/lib/emacsen-common/packages/remove/$@
	install -m 755 debian/prerm-el debian/$@/DEBIAN/prerm
	install -m 755 debian/postinst-el debian/$@/DEBIAN/postinst
	install -m 644 debian/conffiles debian/$@/DEBIAN
	install -m 644 debian/50gettext.el debian/$@/etc/emacs/site-start.d
	cp -p debian/copyright debian/$@/usr/gnu/share/doc/$@
	cp -p ChangeLog debian/$@/usr/gnu/share/doc/$@/changelog
	cp -p debian/changelog debian/$@/usr/gnu/share/doc/$@/changelog.Debian
	cd debian/$@/usr/gnu/share/doc/$@ && gzip -9 changelog changelog.Debian
	dpkg-gencontrol -p$@ -Pdebian/$@
	cd debian/$@/ && \
		md5sum `find * -type f ! -regex "DEBIAN/.*"` > DEBIAN/md5sums
	chown -R 0:0 debian/$@
	chmod -R u+w,go=rX debian/$@
	dpkg --build debian/$@ ..

gettext-doc: build
	rm -rf debian/$@
	install -d debian/$@/DEBIAN debian/$@/usr/gnu/share/doc/$@
	install -d debian/$@/usr/gnu/share/doc-base
	install -m 644 debian/$@.doc-base debian/$@/usr/gnu/share/doc-base/$@
	cp -a debian/tmp/usr/gnu/share/doc/gettext/* debian/$@/usr/gnu/share/doc/$@
	cp -a debian/tmp/usr/gnu/share/doc/libasprintf/* debian/$@/usr/gnu/share/doc/$@
	#rm -f debian/$@/usr/share/doc/$@/javadoc2/package-list
	ln -s $(package)_toc.html debian/$@/usr/gnu/share/doc/$@/index.html
	cp -p debian/copyright debian/$@/usr/gnu/share/doc/$@
	cp -p ChangeLog debian/$@/usr/gnu/share/doc/$@/changelog
	cp -p debian/changelog debian/$@/usr/gnu/share/doc/$@/changelog.Debian
	cd debian/$@/usr/gnu/share/doc/$@ && gzip -9 changelog changelog.Debian
	dpkg-gencontrol -p$@ -Pdebian/$@
	cd debian/$@ && \
		md5sum `find * -type f ! -regex "DEBIAN/.*"` > DEBIAN/md5sums
	chown -R 0:0 debian/$@
	chmod -R u+w,go=rX debian/$@
	dpkg --build debian/$@ ..

autopoint:
	rm -rf debian/$@/
	install -d debian/$@/DEBIAN debian/$@/usr/gnu/share/doc/$@
	cd debian/$@ && install -d usr/gnu/bin usr/gnu/share/gettext usr/gnu/share/man/man1
	cp -p debian/tmp/usr/gnu/bin/autopoint debian/$@/usr/gnu/bin
	cp -p debian/tmp/usr/gnu/share/man/man1/autopoint.1 \
		debian/$@/usr/gnu/share/man/man1
	gzip -r9 debian/$@/usr/gnu/share/man
	cp -p debian/copyright debian/README.Debian debian/$@/usr/gnu/share/doc/$@
	cp -p ChangeLog debian/$@/usr/gnu/share/doc/$@/changelog
	cp -p debian/changelog debian/$@/usr/gnu/share/doc/$@/changelog.Debian
	cd debian/$@/usr/gnu/share/doc/$@ && gzip -9 changelog changelog.Debian
	dpkg-gencontrol -p$@ -Pdebian/$@
	cd debian/$@ && \
		md5sum `find * -type f ! -regex "DEBIAN/.*"` > DEBIAN/md5sums
	chown -R 0:0 debian/$@
	chmod -R u+w,go=rX debian/$@
	dpkg --build debian/$@ ..

binary: binary-indep binary-arch

.PHONY: binary binary-arch binary-indep clean
.PHONY: gettext-base gettext gettext-el gettext-doc autopoint
