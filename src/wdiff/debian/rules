#!/usr/bin/make -f

%:
	dh $@

# experimental = + unify + wdiff2 + mdiff
override_dh_auto_configure:
	dh_auto_configure -- \
		--enable-experimental

override_dh_auto_build:
	dh_auto_build
	cd doc && texi2html wdiff.texi

override_dh_auto_install:
	dh_auto_install
	rm    debian/*/usr/lib/charset.alias
	rmdir debian/*/usr/lib

# No Makefile in sources,
# but generated by configure
# (we can't use [ -f..] && .. ;-):
override_dh_auto_clean:
	[ ! -f Makefile ] || $(MAKE) distclean
	rm -f doc/wdiff.html
