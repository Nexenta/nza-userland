#!/usr/bin/make -f

SHELL = /bin/bash

PREFIX = usr

CC = gcc

DEB_BUILD_GNU_TYPE = $(shell dpkg-architecture -qDEB_BUILD_GNU_TYPE)
DEB_HOST_GNU_TYPE = $(shell dpkg-architecture -qDEB_HOST_GNU_TYPE)
ifneq ($(DEB_BUILD_GNU_TYPE),$(DEB_HOST_GNU_TYPE))
CONFARGS = --host=$(DEB_HOST_GNU_TYPE)
endif

configure: configure-stamp
configure-stamp:
	dh_testdir
	cp -f /usr/share/misc/config.sub build-aux/config.sub
	cp -f /usr/share/misc/config.guess build-aux/config.guess
#	FORCE_UNSAFE_CONFIGURE=1 RSH="/usr/bin/rsh" CFLAGS="-O2 -g -Wall" ./configure \

	FORCE_UNSAFE_CONFIGURE=1 CFLAGS="-O2 -g -Wall" ./configure \
		--prefix=/$(PREFIX) \
		--with-rmt=/$(PREFIX)/sbin/rmt \
		--libexecdir=/$(PREFIX)/sbin \
		--program-prefix=g \
		$(CONFARGS) 
	touch configure-stamp

build: build-stamp
build-stamp: configure-stamp
	dh_testdir
#	RSH="/usr/bin/rsh" CFLAGS="-O2 -g -Wall -fno-gnu89-inline" $(MAKE)
	$(MAKE)

ifeq (,$(filter nocheck,$(DEB_BUILD_OPTIONS)))
ifeq ($(DEB_BUILD_GNU_TYPE),$(DEB_HOST_GNU_TYPE))
	(cd tests ; $(MAKE) clean)
	$(MAKE) check
endif
endif
	perl debian/tarman > debian/gtar.1
	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp debian/gtar.1
	[ ! -f Makefile ] || $(MAKE) distclean
	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

#	make install prefix=`pwd`/debian/tar/${PREFIX} \
#		libexecdir=`pwd`/debian/tar/${PREFIX}/sbin
	make install prefix=`pwd`/debian/tar/${PREFIX}
	install -d debian/tar/$(PREFIX)/gnu/bin
	ln -s ../../bin/gtar debian/tar/$(PREFIX)/gnu/bin/tar

#	mv `pwd`/debian/tar/bin/* `pwd`/debian/tar/${PREFIX}/bin/
	rm -rf `pwd`/debian/tar/bin/
	rm -rf `pwd`/debian/tar/etc/
	rm -rf `pwd`/debian/tar/$(PREFIX)/sbin

# conflict with service-network-network-servers
###	install -m 755 debian/rmt.sh debian/tar/etc/rmt

#	mv debian/tar/${PREFIX}/bin/rmt debian/tar/${PREFIX}/bin/rmt-tar

# fix charset.alias
	rm -f debian/tar/${PREFIX}/lib/charset.alias
#	rm -rf debian/tar/${PREFIX}/lib

# Build architecture-independent files here.
binary-indep: build install

# Build architecture-dependent files here.
binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installdocs
	mv -f debian/tar/usr/share/doc/tar/ChangeLog \
		debian/tar/usr/share/doc/tar/changelog
	mv -f debian/tar/usr/share/doc/tar/ChangeLog.1 \
		debian/tar/usr/share/doc/tar/changelog.1
	dh_installexamples
	dh_installmenu
	dh_installcron
#	dh_installman debian/gtar.1 debian/grmt.8
	dh_installman debian/gtar.1
	rm -rf debian/tar/usr/share/man/man8
#	mv debian/tar/usr/share/man/man8/grmt.8 \
#	   debian/tar/usr/share/man/man8/grmt-tar.8
	dh_installinfo
	rm -f debian/tar/usr/share/info/dir*
	dh_installmime
	dh_installchangelogs #CHANGELOGS#
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
