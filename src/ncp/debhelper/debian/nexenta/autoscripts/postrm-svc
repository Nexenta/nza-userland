SMF_INCLUDE=/lib/svc/share/smf_include.sh

HAVE_SMF=no

if [ -f $SMF_INCLUDE ]; then
    source $SMF_INCLUDE
    if smf_present; then
        HAVE_SMF=yes
    fi
fi

if [ $HAVE_SMF = yes ]; then
    if [ "$1" = purge ] ; then
        for service in #SERVICES#; do
            svccfg -v delete $service || true
        done
    fi
fi
