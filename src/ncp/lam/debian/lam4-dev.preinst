#! /bin/sh
# preinst script for #PACKAGE#
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>

case "$1" in
    install|upgrade)
#        if [ "$1" = "upgrade" ]
#        then
#            start-stop-daemon --stop --quiet --oknodo  \
#                --pidfile /var/run/#PACKAGE#.pid  \
#                --exec /usr/sbin/#PACKAGE# 2>/dev/null || true
#        fi

    if [ "$1" = "install" ] ; then
	if [ -L /usr/lib/lam/lib ] ; then
	    rm /usr/lib/lam/lib;
	    mkdir /usr/lib/lam/lib;
	fi
	if [ -L /usr/include/lam/mpi2c++ ] ; then
	    rm /usr/include/lam/mpi2c++;
	    mkdir /usr/include/lam/mpi2c++;
	fi
    fi

    dpkg --assert-multi-conrep 2>/dev/null || { 
	echo "You must first upgrade dpkg to version >= 1.6.8!"; exit 1;
    }
    
    ;;

    abort-upgrade)
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 0
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0


