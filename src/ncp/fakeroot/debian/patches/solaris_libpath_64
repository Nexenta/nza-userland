 		;;
 	(*:solaris*)
 		libcpath="/lib/libc.so.1"
+		LDLIBPATHVAR="LD_LIBRARY_PATH_32"
+		LDEXTRAVAR="LD_LIBRARY_PATH_64=\"$prefix/lib/64/libfakeroot\""
 		;;
 	(*:darwin*)
 		libcpath="/usr/lib/libSystem.dylib"
