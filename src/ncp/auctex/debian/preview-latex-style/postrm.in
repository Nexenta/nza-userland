#include "variables"
#! /bin/bash -e
#
# <% postrm %> script for <:=${PLSPKG}:>
#
<:=@COPYRIGHT:>//

set -o posix

case "${1}" in
    abort-install|abort-upgrade|disappear|failed-upgrade|purge|remove|upgrade) :;;
    *) echo >&2 "${0##*/}/<:=${PLSPKG}:>:" \
	"Unknown argument: \"${1}\"."
	exit 1
esac

<:# rebuild the <% TeX ls-R %> database :>
case "${1}" in remove|disappear)
	<:=${MKTEXLSR}:>
esac

exit 0
<:
