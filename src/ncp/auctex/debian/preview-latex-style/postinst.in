#include "variables"
#! /bin/bash -e
#
# <% postinst %> script for <:=${PLSPKG}:>
#
<:=@COPYRIGHT:>//

set -o posix

case "${1}" in
    abort-deconfigure|abort-remove|abort-upgrade|configure|reconfigure) :;;
    *) echo >&2 "${0##*/}/<:=${PLSPKG}:>:" \
	"Unknown argument: \"${1}\"."
	exit 1
esac

<:# rebuild the <% TeX ls-R %> database :>
case "${1}" in abort-remove|configure|reconfigure)
	<:=${MKTEXLSR}:>
esac

exit 0
<:
