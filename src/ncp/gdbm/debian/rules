#!/usr/bin/make -f

CC = gcc
CXX = g++
SHELL = /bin/bash

CFLAGS  += -Wall -g -D_REENTRANT

ifneq (,$(findstring noopt,$(DEB_BUILD_OPTIONS)))
    CFLAGS += -O0
else
    CFLAGS += -O2
endif

DEB_HOST_GNU_TYPE  ?= $(shell dpkg-architecture -qDEB_HOST_GNU_TYPE)
DEB_BUILD_GNU_TYPE ?= $(shell dpkg-architecture -qDEB_BUILD_GNU_TYPE)
DEB_HOST_ARCH_OS ?= $(shell dpkg-architecture -qDEB_HOST_ARCH_OS)

patch: patch-stamp
patch-stamp:
	QUILT_PATCHES=debian/patches quilt push -a || test $$? = 2
	touch $@

unpatch:
	QUILT_PATCHES=debian/patches quilt pop -a -f || test $$? = 2
	rm -f patch-stamp

configure32: patch configure32-stamp
configure32-stamp:
	mkdir -p build32 
	cd build32 && \
	CC="$(CC)" \
	CXX="$(CXX)" \
	LDFLAGS="$(LDFLAGS)" \
	../configure --prefix=/usr \
	--enable-shared \
	--mandir=/usr/share/man \
	--libdir=/usr/lib

	touch $@

configure64: patch configure64-stamp
configure64-stamp:
	mkdir -p build64
	cd build64 && \
	CC="$(CC) -m64" \
	CXX="$(CXX) -m64" \
	CFLAGS="$(CFLAGS) -m64" \
	CXXFLAGS="-m64" \
	LDFLAGS="-m64" \
	../configure --prefix=/usr \
	--enable-shared \
	--mandir=/usr/share/man \
	--libdir=/usr/lib/amd64 \
	--build=x86_64-pc-solaris2.11

	touch $@


build: build32 build64

build32: build32-stamp
build32-stamp: configure32-stamp
	cd build32 && \
	$(MAKE) -e libgdbm.la
	touch $@

build64: build64-stamp
build64-stamp: configure64-stamp
	cd build64 && \
	$(MAKE) -e libgdbm.la
	touch $@

install: install-stamp
install-stamp: build
	dh_testdir
	dh_testroot
	dh_clean -k
	
	rm -rf debian/tmp
	dh_installdirs -a

	$(MAKE) -C build32 INSTALL_ROOT=$(CURDIR)/debian/inst32 install
	$(MAKE) -C build64 INSTALL_ROOT=$(CURDIR)/debian/inst64 install
	
	mkdir -p debian/tmp
	cp -ax debian/inst32/* debian/tmp
	cp -ax debian/inst64/usr/lib/amd64 debian/tmp/usr/lib
#	install -d debian/tmp/usr/bin/amd64
#	cp -ax debian/inst64/usr/bin/flex debian/tmp/usr/bin/amd64/
	
	touch $@

binary: binary-arch binary-indep
binary-indep:
binary-arch: install
	dh_testdir
	dh_testroot
	
	dh_install -a
	
	dh_installchangelogs -a
	dh_installdocs -a
	dh_installexamples -a
	dh_installman -a
	
	dh_link -a
	
	dh_compress -a
	dh_makeshlibs
	
	dh_installdeb -a
	
	dh_shlibdeps -a
	
	dh_gencontrol -a
	dh_md5sums -a
	dh_builddeb -a


clean: unpatch
	dh_testdir
	dh_testroot
	rm -f *-stamp
	rm -rf build32 build64
	rm -rf debian/inst32 debian/inst64
	rm -rf .pc
	dh_clean

.PHONY: binary binary-arch build patch unpatch clean
