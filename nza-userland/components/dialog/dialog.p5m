<transform file path=usr.*/man/.+ -> default mangler.man.stability uncommitted>
set name=pkg.fmri value=pkg:/terminal/dialog@$(IPS_COMPONENT_VERSION),$(BUILD_VERSION) 
set name=info.classification value="org.opensolaris.category.2008:Applications/System Utilities"
set name=description value="Dialog"
set name=pkg.description value="Dialog"
set name=pkg.summary value="Dialog"
set name=info.source_url value=$(COMPONENT_ARCHIVE_URL)

dir path=usr
dir path=usr/bin
dir path=usr/share
dir path=usr/share/man
dir path=usr/share/man/man1
file path=usr/bin/dialog
file path=usr/share/man/man1/dialog.1
depend fmri=library/ncurses type=require

license dialog.license license=LGPLv2.1